{
	"name": "firephp-for-firebug.next",
	"dependencies": {
		"smi.cli": "0.x"
	},
    "upstream": {
	    "packages": {
			"top": [
                "../../../_upstream/os-inception/*",
				"../../lib/*",
				"/opt/services/*"
			]
	    }
    },
    "mappings": {
    	"./client/node_modules/pinf-for-mozilla-addon-sdk": "top/pinf-for-mozilla-addon-sdk",
    	"pinf-to-browser": "top/pinf-to-browser",
        "to.pinf.lib": "top/to.pinf.lib"
    },
    "scripts": {
	    "install": "./node_modules/.bin/smi install ; cd components ; npm install --unsafe-perm ; cd .. ; cd ./server; npm install --unsafe-perm",
		"bundle": "cd components ; npm run-script bundle ; cd .. ; cd ./server; npm run-script bundle",
		"run": "./node_modules/to.pinf.lib/bin/pinf-run"
    },
    "config": {
    	"smi.cli": {
	        "packagesDirectory": "node_modules",
	        "latestOnly": true
	    },
	    "pio.deploy.converter": {
	        "name": "nodejs-server",
	        "scriptsPath": "scripts.pio"
	    }
    }
}